<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheet/event.css">  
</head>
<body>
   <%- include("../partials/navbar") %>

   <div class="container">
      <div class="row">
         <div class="col-lg-12 text-center my-2">
         </div>
      </div>
      <div class="portfolio-menu mt-2 mb-4">
         <ul>
            <li class="btn btn-outline-dark active" id="fetchDataButton1" data-filter="*">All</li>
            <li class="btn btn-outline-dark" id="fetchDataButton2" data-filter=".gts">Girls T-shirt</li>
            <li class="btn btn-outline-dark" id="fetchDataButton3" data-filter=".lap">Laptops</li>
            <li class="btn btn-outline-dark text" data-filter=".selfie">selfie</li>
         </ul>
      </div>
      <a href="/society/events/new">Add Event</a>
         <div class="portfolio-item row">
            <% for (let event of events){%>
            <div class="item selfie col-lg-3 col-md-4 col-6 col-sm">
               <img class="img-fluid" src="data:image/jpeg;base64,<%=event.img.toString('base64')%>" alt="">
               <p><%=event.venue%></p>
               <p><%=event.start_date.getDate()%>-<%=event.start_date.getMonth()%>-<%=event.start_date.getFullYear()%></p>
               <p><%=event.end_date.getDate()%>-<%=event.end_date.getMonth()%>-<%=event.end_date.getFullYear()%></p>
               <p><%=event.description%></p>
               <form class="" action="/society/<%=event._id%>?_method=DELETE" method="POST">
                  <button class="btn btn-danger">Delete</button>
              </form>
            </div>
            <% }%>
         </div>
      </div>
      <%- include("../partials/footer1") %>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>


<script src="../javascripts/eventscript.js"></script>
</body>
</html>