<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <%- include("../partials/navbar") %>
    <div class="container">
        <div class="row">
            <h1 class="text-center mt-2">New Announcement</h1>
            <div class="col-6 offset-3 mt-3">
                <form action="/society/announcements" method="POST" novalidate class="validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="to">To</label>
                        <select name="anounces[to]" id="to">
                            <option value="All">All</option>
                            <option value="All Admins">All Admins</option>
                            <option value="All Heads">All Heads</option>
                            <% for(let user of users) { %>
                            <% if(user.username!=currentUser.username) {%>
                              <option value="<%= user.username %>"><%= user.username %></option>
                            <% } %>
                            <% } %>
                          </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="anouncement">Announcement</label>
                        <textarea class="form-control" type="text" id="anouncement" name="anounces[message]" required></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Make Announcement</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <%- include("../partials/footer1") %>    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
</body>
</html>